{
  "extends": ["airbnb-base", "prettier", "plugin:react/recommended"],
  "rules": {
    "no-else-return": ["error", { "allowElseIf": true }],
    "prettier/prettier": ["error"]
  },
  "plugins": ["json", "prettier"],
  "env": {
    "browser": true
  },
  "overrides": [
    {
      "files": ["*.test.js"],
      "rules": {
        "no-undef": 0
      }
    },
    {
      "files": ["*.js"],
      "rules": {
        "import/prefer-default-export": 0
      }
    },
    {
      "files": ["*"],
      "rules": {
        "linebreak-style": 0
      }
    }
  ]
}
